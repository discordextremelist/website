<div class="column is-one-third" is-user-card>
    <div class="box has-background-primary" style="overflow: hidden; height: 100%;">
        <article class="media">
            <div class="media-left">
                <figure class="image is-64x64">
                    <img class="is-rounded" loading="lazy" src="<%= user.avatar.url %>.<%= imageFormat %>?size=128" alt="<%= __("common.img.avatar", user.fullUsername) %>" onerror="this.onerror = null;this.src = '/img/defaultavatar.<%= imageFormat %>';console.log('<%= __("common.img.loadFail", user._id) %>');" >
                </figure>
            </div>
            <div style="overflow: hidden;" class="media-content">
                <div class="content">
                    <p>
                    <span class="is-size-4 title has-text-default is-mobile">
                        <span><%= user.fullUsername %></span>
                    </span>
                        <br />
                        <%= user.profile.bio.length >= 64 ? user.profile.bio.slice(0, 64)+'\u2026' : user.profile.bio %>
                    </p>
                </div>
                <div class="content-footer">
                    <div class="buttons">
                        <% if (search === true) { %>
                            <a href="<%= linkPrefix %>/users/<%= user._id %>" class="button is-default is-outlined">
                                <span class="icon">
                                  <i class="fas fa-user"></i>
                                </span>
                                <span><%= __("common.view.user") %></span>
                            </a>
                        <% } else { %>
                            <a href="<%= linkPrefix %>/users/<%= user._id %>" class="button is-default is-outlined">
                                <span class="icon">
                                  <i class="fas fa-eye"></i>
                                </span>
                                <span><%= __("common.view") %></span>
                            </a>
                        <% } %>
                    </div>
                </div>
            </div>
        </article>
    </div>
</div>
