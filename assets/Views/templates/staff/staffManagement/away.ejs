<%- include("../../../partials/header.ejs") %>
<link href="/css/theme/<%= preferredTheme %>/form.css?v=<%= cssVersion %>" type="text/css" media="screen, print" rel="stylesheet" />
<%- include("../../../partials/staffNav.ejs") %>
<section class="hero is-black">
    <div class="hero-body">
        <br />
        <div class="container has-text-centered">
            <h1 class="title">
                <span class="icon is-medium iconalign">
                    <i aria-hidden="true" class="fad fa-lights-holiday has-text-default"></i>
                </span>
                <br />
                <span><%= title %></span>
            </h1>
            <h2 class="subtitle">
                <%= subtitle %>
            </h2>
        </div>
    </div>
</section>
<div class="container">
    <div class="section">
        <form id="form" method="POST">
            <div class="field">
                <label class="label has-text-default"><%= __("page.staff.manager.setAway.reason") %></label>
                <p class="control has-icons-left has-icons-right">
                    <input class="input is-rounded" type="text" name="reason" value="<%= user.staffTracking.details.away.message %>" placeholder="<%= __("page.staff.manager.setAway.reason.placeholder") %>">
                    <span class="icon is-small is-left">
                        <i aria-hidden="true" class="fas fa-comment-lines"></i>
                    </span>
                </p>
            </div>
            <br />
            <div class="field is-grouped">
                <div class="buttons">
                    <button class="button is-success">
                        <span class="icon">
                            <i aria-hidden="true" class="fas fa-check-circle"></i>
                        </span>
                        <span><%= __("common.submit") %></span>
                    </button>
                    <a href="<%= linkPrefix %>/staff/staff-manager/away/<%= user._id %>/reset" class="button is-orange">
                        <span class="icon">
                            <i aria-hidden="true" class="fas fa-minus-circle"></i>
                        </span>
                        <span><%= __("page.staff.announcer.reset") %></span>
                    </a>
                    <a href="<%= linkPrefix %>/staff/staff-manager" class="button is-danger">
                        <span class="icon">
                            <i aria-hidden="true" class="fas fa-times-circle"></i>
                        </span>
                        <span><%= __("common.cancel") %></span>
                    </a>
                </div>
            </div>
        </form>    
    </div>
</div>
<%- include("../../../partials/footer.ejs") %>