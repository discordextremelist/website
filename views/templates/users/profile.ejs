                                                    <span><%= __("common.edit") %></span>
                                                </a>
                                                <a class="dropdown-item has-text-orange" href="<%= linkPrefix %>/users/<%= userProfile._id %>/rank">
                                                    <span class="icon"><i aria-hidden="true" class="fas fa-crown"></i></span>
                                                    <span><%= __("page.users.modifyRank") %></span>
                                                </a>
                                            <% } %>
