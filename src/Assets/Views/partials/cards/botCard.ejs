<div class="column <% if (queue) { %>is-half<% } else { %>is-one-third<% } %>" is-bot-card>
    <div class="box has-background-primary" style="overflow: hidden; height: 100%;">
        <article class="media">
            <div class="media-left">
                <figure class="image is-64x64">
                    <img class="is-rounded lazyload" data-src="<%= bot.avatar.url %>.<%= imageFormat %>?size=128" alt="<%= __("common.img.avatar", bot.name) %>" onerror="this.onerror = null;this.src = '/img/defaultavatar.<%= imageFormat %>';console.log('<%= __("common.img.loadFail", bot._id) %>');" >
                </figure>
            </div>
            <div style="overflow: hidden;" class="media-content">
                <div class="content">
                    <p>
                    <span class="is-size-4 title has-text-default is-mobile">
                        <span><%= bot.name %></span>
                        <% if (bot.flags & (1 << 16)) { %>
                            <span style="vertical-align: middle;" title="<%= __("common.rank.verified.bot") %>" class="icon iconalign">
                                <i aria-hidden="true" class="fad fa-badge-check has-text-magenta fa-1x"></i>
                            </span>
                        <% } %>
                        <% if (bot.status.premium === true) { %>
                            <span style="vertical-align: middle;" title="<%= __("common.rank.premium.bot") %>" class="icon iconalign">
                                <i aria-hidden="true" class="fad fa-star has-text-warning fa-1x"></i>
                            </span>
                        <% } %>
                        <% if (bot.status.siteBot === true) { %>
                            <span style="vertical-align: middle;" title="<%= __("common.rank.siteBot") %>" class="icon iconalign">
                                <i aria-hidden="true" class="fad fa-cogs has-text-grey-lighter fa-1x"></i>
                            </span>
                        <% } %>
                    </span>
                        <br />
                        <%= bot.shortDesc.length >= 64 ? bot.shortDesc.slice(0, 64)+'\u2026' : bot.shortDesc %>
                    </p>
                </div>
                <div class="content-footer">
                    <div class="buttons">
                    <% if (bot.status.archived === true) { %>
                        <a href="<%= linkPrefix %>/bots/<%= bot._id %>/resubmit" class="button is-default is-outlined">
                            <span class="icon">
                              <i class="fas fa-redo-alt"></i>
                            </span>
                            <span><%= __("common.resubmit") %></span>
                        </a>
                    <% } else if (verificationApp === true) { %>
                        <a href="<%= linkPrefix %>/staff/apps/verification/<%= bot._id %>" class="button is-default is-outlined">
                            <span class="icon">
                              <i class="fas fa-eye"></i>
                            </span>
                            <span><%= __("common.application.view") %></span>
                        </a>
                    <% } else if (search === true) { %>
                        <a href="<%= linkPrefix %>/bots/<%= bot._id %>" class="button is-default is-outlined">
                            <span class="icon">
                                <i class="fas fa-robot"></i>
                            </span>
                            <span><%= __("common.view.bot") %></span>
                        </a>
                    <% } else if (queue === true) { %>
                        <a href="<%= linkPrefix %>/bots/<%= bot._id %>" class="button is-default is-outlined">
                            <span class="icon">
                                <i class="fas fa-eye"></i>
                            </span>
                            <span><%= __("common.view") %></span>
                        </a>
                    <% } else { %>
                        <a href="<%= linkPrefix %>/bots/<%= bot._id %>" class="button is-default is-outlined">
                            <span class="icon">
                              <i class="fas fa-eye"></i>
                            </span>
                            <span><%= __("common.view") %></span>
                        </a>
                        <a href="<%= bot.links.invite %>" class="button is-blurple is-outlined">
                            <span class="icon">
                              <i class="fas fa-plus"></i>
                            </span>
                            <span><%= __("common.invite") %></span>
                        </a>
                    <% } %>
                    </div>
                </div>
            </div>
        </article>
    </div>
</div>
