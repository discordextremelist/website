<%- include("../../partials/header.ejs") %>
<%- include("../../partials/nav.ejs") %>

<%- include("../../partials/isDefaultCSS/button.ejs") %>
<style>
    .modal-card-head.is-warning {
        border-bottom: 1px solid #ffdd57 !important;
        border-top-left-radius: 6px;
        border-top-right-radius: 6px;
    }
    .modal-card-head.is-info {
        border-bottom: 1px solid #3298dc !important;
        border-top-left-radius: 6px;
        border-top-right-radius: 6px;
    }
</style>
<section class="hero is-primary">
    <div class="hero-body">
        <div class="container has-text-centered">
            <br />
            <h1 class="title">
                <span class="icon is-medium iconalign">
                    <i aria-hidden="true" class="fad fa-users-cog has-text-default fa-1x"></i>
                </span>
                <br />
                <span><%= title %></span>
            </h1>
            <h2 class="subtitle"><%= subtitle %></h2>
        </div>
    </div>
</section>
<div class="container">
    <div class="section">
        <h3 class="is-size-3 has-text-danger">
            <span class="icon iconalign">
                <i aria-hidden="true" class="fad fa-crown"></i>
            </span>
            <span><%= __("common.rank.admin.short") %></span>
        </h3>
        <br />
        <div class="columns is-multiline is-centered">
            <%- admin.map(user => include("../../partials/cards/userCardMgmt.ejs", { user })).join("") %>
        </div>
        <br />
        <h3 class="is-size-3 has-text-orange">
            <span class="icon iconalign">
                <i aria-hidden="true" class="fad fa-swords"></i>
            </span>
            <span><%= __("common.rank.assistant.short") %></span>
        </h3>
        <br />
        <div class="columns is-multiline is-centered">
            <%- assistant.map(user => include("../../partials/cards/userCardMgmt.ejs", { user })).join("") %>
        </div>
        <br />
        <h3 class="is-size-3 has-text-success">
            <span class="icon iconalign">
                <i aria-hidden="true" class="fad fa-hammer-war"></i>
            </span>
            <span><%= __("common.rank.mod.short") %></span>
        </h3>
        <br />
        <div class="columns is-multiline is-centered">
            <%- mod.map(user => include("../../partials/cards/userCardMgmt.ejs", { user })).join("") %>
        </div>
    </div>
</div>
<%- include("../../partials/footer.ejs") %>
