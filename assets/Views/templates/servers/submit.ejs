<section class="hero is-black">
    <div class="hero-body">
        <br />
        <div class="container has-text-centered">
            <h1 class="title">
                <span class="icon is-medium iconalign">
                    <i aria-hidden="true" class="fas fa-plus has-text-default"></i>
                </span>
                <br />
                <span><%= title %></span>
            </h1>
            <h2 class="subtitle">
                <%= subtitle %>
            </h2>
        </div>
    </div>
    </section>
    <div class="container">
        <div class="section">
            <article id="errors" style="display: none;" class="message is-danger">
                <div class="message-body content has-background-primary">
                    <ul id="errorList" style="margin-top: unset;">
                        
                    </ul>
                </div>
            </article>

            <form method="POST">
                <h3 class="is-size-3 has-text-default"><%= __("page.form.category.generalInfo") %></h3>
                <br />
                <div class="field">
                    <label class="label has-text-default"><%= __("page.servers.code") %> <span class="has-text-danger">*</span></label>
                    <div class="control">
                    <div class="field has-addons <% if (htmlDir === "rtl") { %>has-addons-right<% } %>" style="direction: ltr;">
                        <p class="control" aria-hidden="true">
                            <a class="button is-rounded is-static">
                                https://discord.gg/
                            </a>
                        </p>
                        <p class="control" required>
                            <input id="form_inviteCode" class="input is-rounded" type="text" name="invite" placeholder="WeCer3J" onpaste="setTimeout(() => this.value = this.value.replace('https:/\/discord.gg/', ''), 0)">
                        </p>
                    </div>
                </div>
                <br />
                <label class="label has-text-default"><%= __("common.tags") %></label>
                <div class="columns">
                    <div class="column is-one-quarter">
                        <div class="field">
                            <input class="is-checkradio is-circle has-background-color is-link" type="checkbox" id="gaming" name="gaming">
                            <label class="has-text-link" for="gaming"><%= __("common.tags.gaming") %></label>
                        </div>
                        <div class="field">
                            <input class="is-checkradio is-circle has-background-color is-info" type="checkbox" id="music" name="music">
                            <label class="has-text-info" for="music"><%= __("common.tags.music") %></label>
                        </div>
                        <div class="field">
                            <input class="is-checkradio is-circle has-background-color is-success" type="checkbox" id="mediaEntertain" name="mediaEntertain">
                            <label class="has-text-success" for="mediaEntertain"><%= __("common.tags.mediaEntertainment") %></label>
                        </div>
                        <div class="field">
                            <input class="is-checkradio is-circle has-background-color is-orange" type="checkbox" id="createArts" name="createArts">
                            <label class="has-text-orange" for="createArts"><%= __("common.tags.creativeArts") %></label>
                        </div>
                        <div class="field">
                            <input class="is-checkradio is-circle has-background-color is-danger" type="checkbox" id="sciTech" name="sciTech">
                            <label class="has-text-danger" for="sciTech"><%= __("common.tags.scienceTech") %></label>
                        </div>
                        <div class="field">
                            <input class="is-checkradio is-circle has-background-color is-magenta" type="checkbox" id="edu" name="edu">
                            <label class="has-text-magenta" for="edu"><%= __("common.tags.education") %></label>
                        </div>
                        <div class="field">
                            <input class="is-checkradio is-circle has-background-color is-pink" type="checkbox" id="fashBeaut" name="fashBeaut">
                            <label class="has-text-pink" for="fashBeaut"><%= __("common.tags.fashionBeauty") %></label>
                        </div>
                    </div>
                    <div class="column is-one-quarter">
                        <div class="field">
                            <input class="is-checkradio is-circle has-background-color is-link" type="checkbox" id="relIdentity" name="relIdentity">
                            <label class="has-text-link" for="relIdentity"><%= __("common.tags.relationshipIdentity") %></label>
                        </div>
