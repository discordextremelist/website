                            <input class="is-checkradio is-circle has-background-color is-info" type="checkbox" id="travelCuis" name="travelCuis">
                            <label class="has-text-info" for="travelCuis"><%= __("common.tags.travelFood") %></label>
                        </div>
                        <div class="field">
                            <input class="is-checkradio is-circle has-background-color is-success" type="checkbox" id="fitHealth" name="fitHealth">
                            <label class="has-text-success" for="fitHealth"><%= __("common.tags.fitnessHealth") %></label>
                        </div>
                        <div class="field">
                            <input class="is-checkradio is-circle has-background-color is-orange" type="checkbox" id="finance" name="finance">
                            <label class="has-text-orange" for="finance"><%= __("common.tags.finance") %></label>
                        </div>
                    </div>
                    <div class="column is-one-quarter"></div>
                    <div class="column is-one-quarter"></div>
                </div>
                <br />
                <br />
                <h3 class="is-size-3 has-text-default"><%= __("page.form.category.links") %></h3>
                <br />
