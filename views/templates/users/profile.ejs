                    <div class="columns is-multiline is-centered">
                        <%- hiddenBots.map(bot => include("../../partials/cards/botCard.ejs", { bot, search: false, queue: false, inviteQueue: false, hidden: true, verificationApp: false, profile: false })).join("") %>
                    </div>
                <% } %>
                <% if (archivedBots.length > 0) { %>
                    <br>
                    <h2 id="archived-bots" class="is-size-4 has-text-centered"><%= __("page.users.listings.archivedBots") %></h2>
                    <br>
                    <div class="columns is-multiline is-centered">
                        <%- archivedBots.map(bot => include("../../partials/cards/botCard.ejs", { bot, search: false, queue: false, inviteQueue: false, archived: true, verificationApp: false, profile: false })).join("") %>
                    </div>
                <% } %>
            <% } %>
    </div>
</div>
<div class="modal" id="deleteModal">
    <div class="modal-background" style="backdrop-filter: blur(8px);
        background-color: rgba(255, 0, 0, 0.111) !important;"></div>
    <div class="modal-card">
        <header class="modal-card-head">
            <p class="modal-card-title has-text-danger">
                    <span class="icon">
                        <i class="fad fa-warning"></i>
                    </span>
                <%= __("page.account.admin.delete.user.pre.confirm") %>
            </p>
            <button class="delete" aria-label="close" onclick="closeDeleteModal()"></button>
        </header>
        <section class="modal-card-body">
            <div class="content">
                <p class="has-text-danger">
                    <%= __("page.account.admin.delete.user.text") %>
                </p>
                <form method="POST" action="<%= linkPrefix %>/users/account/data/<%= userProfile._id %>/delete">
                    <div class="field">
                        <label class="label"><%= __("page.account.data.delete.confirm.type") %></label>
                        <div class="control">
                            <input name="typedUsername" id="typedUsername" onpaste="return false;" ondrop="return false;" autocomplete="off" class="input" type="text"
                                   required
                                   placeholder="<%= userProfile.fullUsername %>"
                                   pattern="<%= userProfile.fullUsername %>"
                                   disabled>
                        </div>
                    </div>

                    <div class="field">
                        <div class="control">
                            <button type="submit" id="submitButton" class="button is-danger" disabled>
                                    <span class="icon">
                                        <i class="fas fa-shredder"></i>
                                    </span>
                                <span><%= __("page.account.admin.delete.user.confirm") %></span>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>
<script>
    function showDeleteModal() {
        document.getElementById('deleteModal').classList.add('is-active');

        setTimeout(() => {
            submitButton.removeAttribute("disabled");
            typedUsername.removeAttribute("disabled");
            typedUsername.placeholder = "<%= userProfile.fullUsername %>"
        }, 5000);
    }

    function closeDeleteModal() {
        document.getElementById('deleteModal').classList.remove('is-active');
    }

    document.querySelector('.modal-background').addEventListener('click', closeDeleteModal);
</script>
